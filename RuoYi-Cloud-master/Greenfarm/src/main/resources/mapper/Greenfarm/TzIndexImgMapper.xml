<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.Greenfarm.mapper.TzIndexImgMapper">
    
    <resultMap type="TzIndexImg" id="TzIndexImgResult">
        <result property="imgId"    column="img_id"    />
        <result property="shopId"    column="shop_id"    />
        <result property="imgUrl"    column="img_url"    />
        <result property="des"    column="des"    />
        <result property="title"    column="title"    />
        <result property="link"    column="link"    />
        <result property="status"    column="status"    />
        <result property="seq"    column="seq"    />
        <result property="uploadTime"    column="upload_time"    />
        <result property="relation"    column="relation"    />
        <result property="type"    column="type"    />
    </resultMap>

    <sql id="selectTzIndexImgVo">
        select img_id, shop_id, img_url, des, title, link, status, seq, upload_time, relation, type from tz_index_img
    </sql>

    <select id="selectTzIndexImgList" parameterType="TzIndexImg" resultMap="TzIndexImgResult">
        <include refid="selectTzIndexImgVo"/>
        <where>  
            <if test="shopId != null "> and shop_id = #{shopId}</if>
            <if test="imgUrl != null  and imgUrl != ''"> and img_url = #{imgUrl}</if>
            <if test="des != null  and des != ''"> and des = #{des}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="link != null  and link != ''"> and link = #{link}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="seq != null "> and seq = #{seq}</if>
            <if test="uploadTime != null "> and upload_time = #{uploadTime}</if>
            <if test="relation != null "> and relation = #{relation}</if>
            <if test="type != null "> and type = #{type}</if>
        </where>
    </select>
    
    <select id="selectTzIndexImgByImgId" parameterType="Long" resultMap="TzIndexImgResult">
        <include refid="selectTzIndexImgVo"/>
        where img_id = #{imgId}
    </select>
        
    <insert id="insertTzIndexImg" parameterType="TzIndexImg" useGeneratedKeys="true" keyProperty="imgId">
        insert into tz_index_img
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="shopId != null">shop_id,</if>
            <if test="imgUrl != null and imgUrl != ''">img_url,</if>
            <if test="des != null">des,</if>
            <if test="title != null">title,</if>
            <if test="link != null">link,</if>
            <if test="status != null">status,</if>
            <if test="seq != null">seq,</if>
            <if test="uploadTime != null">upload_time,</if>
            <if test="relation != null">relation,</if>
            <if test="type != null">type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="shopId != null">#{shopId},</if>
            <if test="imgUrl != null and imgUrl != ''">#{imgUrl},</if>
            <if test="des != null">#{des},</if>
            <if test="title != null">#{title},</if>
            <if test="link != null">#{link},</if>
            <if test="status != null">#{status},</if>
            <if test="seq != null">#{seq},</if>
            <if test="uploadTime != null">#{uploadTime},</if>
            <if test="relation != null">#{relation},</if>
            <if test="type != null">#{type},</if>
         </trim>
    </insert>

    <update id="updateTzIndexImg" parameterType="TzIndexImg">
        update tz_index_img
        <trim prefix="SET" suffixOverrides=",">
            <if test="shopId != null">shop_id = #{shopId},</if>
            <if test="imgUrl != null and imgUrl != ''">img_url = #{imgUrl},</if>
            <if test="des != null">des = #{des},</if>
            <if test="title != null">title = #{title},</if>
            <if test="link != null">link = #{link},</if>
            <if test="status != null">status = #{status},</if>
            <if test="seq != null">seq = #{seq},</if>
            <if test="uploadTime != null">upload_time = #{uploadTime},</if>
            <if test="relation != null">relation = #{relation},</if>
            <if test="type != null">type = #{type},</if>
        </trim>
        where img_id = #{imgId}
    </update>

    <delete id="deleteTzIndexImgByImgId" parameterType="Long">
        delete from tz_index_img where img_id = #{imgId}
    </delete>

    <delete id="deleteTzIndexImgByImgIds" parameterType="String">
        delete from tz_index_img where img_id in 
        <foreach item="imgId" collection="array" open="(" separator="," close=")">
            #{imgId}
        </foreach>
    </delete>
</mapper>