<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.Greenfarm.mapper.TzProdFavoriteMapper">
    
    <resultMap type="TzProdFavorite" id="TzProdFavoriteResult">
        <result property="favoriteId"    column="favorite_id"    />
        <result property="prodId"    column="prod_id"    />
        <result property="recTime"    column="rec_time"    />
        <result property="userId"    column="user_id"    />
    </resultMap>

    <sql id="selectTzProdFavoriteVo">
        select favorite_id, prod_id, rec_time, user_id from tz_prod_favorite
    </sql>

    <select id="selectTzProdFavoriteList" parameterType="TzProdFavorite" resultMap="TzProdFavoriteResult">
        <include refid="selectTzProdFavoriteVo"/>
        <where>  
            <if test="prodId != null "> and prod_id = #{prodId}</if>
            <if test="recTime != null "> and rec_time = #{recTime}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectTzProdFavoriteByFavoriteId" parameterType="Long" resultMap="TzProdFavoriteResult">
        <include refid="selectTzProdFavoriteVo"/>
        where favorite_id = #{favoriteId}
    </select>
        
    <insert id="insertTzProdFavorite" parameterType="TzProdFavorite" useGeneratedKeys="true" keyProperty="favoriteId">
        insert into tz_prod_favorite
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="prodId != null">prod_id,</if>
            <if test="recTime != null">rec_time,</if>
            <if test="userId != null and userId != ''">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="prodId != null">#{prodId},</if>
            <if test="recTime != null">#{recTime},</if>
            <if test="userId != null and userId != ''">#{userId},</if>
         </trim>
    </insert>

    <update id="updateTzProdFavorite" parameterType="TzProdFavorite">
        update tz_prod_favorite
        <trim prefix="SET" suffixOverrides=",">
            <if test="prodId != null">prod_id = #{prodId},</if>
            <if test="recTime != null">rec_time = #{recTime},</if>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
        </trim>
        where favorite_id = #{favoriteId}
    </update>

    <delete id="deleteTzProdFavoriteByFavoriteId" parameterType="Long">
        delete from tz_prod_favorite where favorite_id = #{favoriteId}
    </delete>

    <delete id="deleteTzProdFavoriteByFavoriteIds" parameterType="String">
        delete from tz_prod_favorite where favorite_id in 
        <foreach item="favoriteId" collection="array" open="(" separator="," close=")">
            #{favoriteId}
        </foreach>
    </delete>
</mapper>