<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.Greenfarm.mapper.TzSysRoleMenuMapper">
    
    <resultMap type="TzSysRoleMenu" id="TzSysRoleMenuResult">
        <result property="id"    column="id"    />
        <result property="roleId"    column="role_id"    />
        <result property="menuId"    column="menu_id"    />
    </resultMap>

    <sql id="selectTzSysRoleMenuVo">
        select id, role_id, menu_id from tz_sys_role_menu
    </sql>

    <select id="selectTzSysRoleMenuList" parameterType="TzSysRoleMenu" resultMap="TzSysRoleMenuResult">
        <include refid="selectTzSysRoleMenuVo"/>
        <where>  
            <if test="roleId != null "> and role_id = #{roleId}</if>
            <if test="menuId != null "> and menu_id = #{menuId}</if>
        </where>
    </select>
    
    <select id="selectTzSysRoleMenuById" parameterType="Long" resultMap="TzSysRoleMenuResult">
        <include refid="selectTzSysRoleMenuVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTzSysRoleMenu" parameterType="TzSysRoleMenu" useGeneratedKeys="true" keyProperty="id">
        insert into tz_sys_role_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roleId != null">role_id,</if>
            <if test="menuId != null">menu_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roleId != null">#{roleId},</if>
            <if test="menuId != null">#{menuId},</if>
         </trim>
    </insert>

    <update id="updateTzSysRoleMenu" parameterType="TzSysRoleMenu">
        update tz_sys_role_menu
        <trim prefix="SET" suffixOverrides=",">
            <if test="roleId != null">role_id = #{roleId},</if>
            <if test="menuId != null">menu_id = #{menuId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTzSysRoleMenuById" parameterType="Long">
        delete from tz_sys_role_menu where id = #{id}
    </delete>

    <delete id="deleteTzSysRoleMenuByIds" parameterType="String">
        delete from tz_sys_role_menu where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>