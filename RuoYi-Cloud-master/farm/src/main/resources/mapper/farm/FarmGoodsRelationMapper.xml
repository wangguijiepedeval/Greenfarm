<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.farm.mapper.FarmGoodsRelationMapper">
    
    <resultMap type="FarmGoodsRelation" id="FarmGoodsRelationResult">
        <result property="farmid"    column="farmId"    />
        <result property="goodsid"    column="goodsId"    />
        <result property="num"    column="num"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectFarmGoodsRelationVo">
        select farmId, goodsId, num, update_time, create_time from farm_goods_relation
    </sql>

    <select id="selectFarmGoodsRelationList" parameterType="FarmGoodsRelation" resultMap="FarmGoodsRelationResult">
        <include refid="selectFarmGoodsRelationVo"/>
        <where>  
            <if test="num != null "> and num = #{num}</if>
        </where>
    </select>
    
    <select id="selectFarmGoodsRelationByFarmid" parameterType="String" resultMap="FarmGoodsRelationResult">
        <include refid="selectFarmGoodsRelationVo"/>
        where farmId = #{farmid}
    </select>
        
    <insert id="insertFarmGoodsRelation" parameterType="FarmGoodsRelation">
        insert into farm_goods_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="farmid != null">farmId,</if>
            <if test="goodsid != null">goodsId,</if>
            <if test="num != null">num,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="farmid != null">#{farmid},</if>
            <if test="goodsid != null">#{goodsid},</if>
            <if test="num != null">#{num},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateFarmGoodsRelation" parameterType="FarmGoodsRelation">
        update farm_goods_relation
        <trim prefix="SET" suffixOverrides=",">
            <if test="goodsid != null">goodsId = #{goodsid},</if>
            <if test="num != null">num = #{num},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where farmId = #{farmid}
    </update>

    <delete id="deleteFarmGoodsRelationByFarmid" parameterType="String">
        delete from farm_goods_relation where farmId = #{farmid}
    </delete>

    <delete id="deleteFarmGoodsRelationByFarmids" parameterType="String">
        delete from farm_goods_relation where farmId in 
        <foreach item="farmid" collection="array" open="(" separator="," close=")">
            #{farmid}
        </foreach>
    </delete>
</mapper>