<mapper namespace="com.ruoyi.farm.mapper.OrdersCustomerRelationMapper">
    
    <resultMap type="OrdersCustomerRelation" id="OrdersCustomerRelationResult">
        <result property="ordersid"    column="ordersId"    />
        <result property="customerid"    column="customerId"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectOrdersCustomerRelationVo">
        select ordersId, customerId, update_time, create_time from orders_customer_relation
    </sql>

    <select id="selectOrdersCustomerRelationList" parameterType="OrdersCustomerRelation" resultMap="OrdersCustomerRelationResult">
        <include refid="selectOrdersCustomerRelationVo"/>
        <where>  
        </where>
    </select>
    
    <select id="selectOrdersCustomerRelationByOrdersid" parameterType="String" resultMap="OrdersCustomerRelationResult">
        <include refid="selectOrdersCustomerRelationVo"/>
        where ordersId = #{ordersid}
    </select>
        
    <insert id="insertOrdersCustomerRelation" parameterType="OrdersCustomerRelation">
        insert into orders_customer_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="ordersid != null">ordersId,</if>
            <if test="customerid != null">customerId,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="ordersid != null">#{ordersid},</if>
            <if test="customerid != null">#{customerid},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateOrdersCustomerRelation" parameterType="OrdersCustomerRelation">
        update orders_customer_relation
        <trim prefix="SET" suffixOverrides=",">
            <if test="customerid != null">customerId = #{customerid},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where ordersId = #{ordersid}
    </update>

    <delete id="deleteOrdersCustomerRelationByOrdersid" parameterType="String">
        delete from orders_customer_relation where ordersId = #{ordersid}
    </delete>

    <delete id="deleteOrdersCustomerRelationByOrdersids" parameterType="String">
        delete from orders_customer_relation where ordersId in 
        <foreach item="ordersid" collection="array" open="(" separator="," close=")">
            #{ordersid}
        </foreach>
    </delete>
</mapper>